<% name = local_assigns[:name] || nil %>
<% type = local_assigns[:type] || :outline %>
<% klass = local_assigns[:class] || "" %>

<% path = "components/icons/#{type.to_s}/#{name.to_s}" %>
<% begin %>
  <%= render path, class: klass.to_s %>
<% rescue %>
  <%= "Icon Not Found! path: #{path}" %>
<% end %>
